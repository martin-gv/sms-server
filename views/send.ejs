<%- include('includes/header', { title: "Send Mesage", loggedIn: true }); %>
<%- include('includes/alert', { message: locals.message}); %>
<div class="card mx-auto">
  <div class="card-body">
    <h4 class="card-title">Send Message</h4>
    <hr />
    <form autocomplete="off" method="POST" action="/send">
      <div class="form-group">
        <label for="recipientNumber">To:</label>
        <input
          class="form-control"
          id="recipientNumber"
          type="text"
          name="recipientNumber"
          required="true"
        />
      </div>
      <div class="form-group">
        <label for="messageContent">Message:</label>
        <textarea
          class="form-control"
          id="messageContent"
          name="messageContent"
          rows="3"
          required="true"
        ></textarea>
      </div>
      <div id="alert"></div>
      <button type="submit" class="btn btn-primary">
        Send Message
      </button>
    </form>
  </div>
</div>
<%- include('includes/footer'); %>
