<%- include('includes/header', { title: "Settings" }); %>
<div class="container" style="max-width: 20rem; padding: 0">
  <%- include('includes/alert', { message: locals.message}); %>
</div>
<div class="register-container mt-4 mx-auto">
    <h4>Create new account</h4>
    <hr />
    <form autocomplete="off" method="POST" action="/register">
      <div class="form-group">
        <label for="email">Email:</label>
        <input
          class="form-control"
          id="email"
          type="email"
          name="email"
          required="true"
          value="<%= locals.email %>"
        />
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input
          class="form-control"
          id="password"
          type="password"
          name="password"
          required="true"
        />
      </div>
      <div class="form-group">
        <label for="confirmPassword">Confirm password:</label>
        <input
          class="form-control"
          id="confirmPassword"
          type="password"
          name="confirmPassword"
          required="true"
        />
      </div>
      <button type="submit" class="btn btn-primary">
        Register
      </button>
    </form>
  </div>
<%- include('includes/footer'); %>
