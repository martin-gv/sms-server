<%- include('includes/header', { title: 'Login' }); %>
<div class="card mx-auto mt-4" style="max-width: 20rem;">
  <div class="card-body">
    <h3 class="text-center mb-4">Login</h3>
    <form method="POST" action="/login">
      <div class="form-group">
        <label for="email">Email:</label>
        <input
          class="form-control"
          type="text"
          name="email"
          id="email"
          required="true"
          autofocus="true"
          value="<%= locals.email %>"
        />
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required="true"
        />
      </div>
      <% if (message && message.error) { %>
      <div class="alert alert-danger" role="alert">
        <%= message.error %>
      </div>
      <% } %>
      <button class="btn btn-primary btn-block" type="submit">
        Login
      </button>
    </form>
    <a class="d-block mt-3 text-center" href="/register"
      >or create new account</a
    >
  </div>
</div>
<%- include('includes/footer'); %>
