<%- include('includes/header', { title: 'Login' }); %>
<%- include('includes/alert', { message: locals.message}); %>
<div class="login-container mt-4 mx-auto">
    <h3 class="text-center mb-4">Login</h3>
    <form method="POST" action="/login">
      <div class="form-group">
        <label for="email">Email:</label>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          required="true"
          autofocus="true"
          value="<%= locals.email %>"
        />
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input
          class="form-control"
          type="password"
          name="password"
          id="password"
          required="true"
        />
      </div>
      <% if (message && message.error) { %>
      <div class="alert alert-danger" role="alert">
        <%= message.error %>
      </div>
      <% } %>
      <button class="btn btn-primary btn-block" type="submit">
        Login
      </button>
    </form>
    <!-- <a class="d-block mt-3 text-center" href="/register"
      >or create new account</a
    > -->
    <a href="/forgot-password" class="d-block mt-3 text-center">Forgot password?</a>
  </div>
<%- include('includes/footer'); %>
