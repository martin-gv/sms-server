<div class="modal fade" id="editContactNameModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit chat</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          Phone number: <%= locals.conversation.formattedPhoneNumber %>
        </div>
        <form
          id="editContactNameForm"
          autocomplete="off"
          method="POST"
          action="/conversations/<%= locals.conversation.id; %>/edit"
        >
          <div class="form-row">
            <div class="form-group col">
              <label for="firstName">First name</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                value="<%= locals.conversation.contactFirstName; %>"
              />
            </div>
            <div class="form-group col">
              <label for="lastName">Last name</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                value="<%= locals.conversation.contactLastName; %>"
              />
            </div>
          </div>
        </form>
      </div>
      <!-- .modal-footer has display:flex and justify-content:flex-end by default -->
      <div class="modal-footer justify-content-between">
        <button
          class="btn btn-outline-danger float-left"
          data-toggle="modal"
          data-target="#confirmDeleteModal"
          data-dismiss="modal"
        >
          Delete
        </button>
        <div>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            class="btn btn-primary"
            form="editContactNameForm"
          >
            Save changes
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
