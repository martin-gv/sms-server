<div class="modal fade" id="editContactNameModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit chat</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          Phone number: <%= locals.conversation.formattedPhoneNumber %>
        </div>
        <form
          id="editContactNameForm"
          autocomplete="off"
          method="POST"
          action="/conversations/<%= locals.conversation.id; %>/edit"
        >
          <div class="form-row">
            <div class="form-group col">
              <label for="firstName">First name</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                value="<%= locals.conversation.contactFirstName; %>"
              />
            </div>
            <div class="form-group col">
              <label for="lastName">Last name</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                value="<%= locals.conversation.contactLastName; %>"
              />
            </div>
          </div>
        </form>
      </div>
      <!-- .modal-footer has display:flex and justify-content:flex-end by default -->
      <div class="modal-footer justify-content-between">
        <button
          class="btn btn-outline-danger float-left"
          data-toggle="modal"
          data-target="#confirmDeleteModal"
          data-dismiss="modal"
        >
          <svg
            width="1em"
            height="1em"
            viewBox="0 0 16 16"
            class="bi bi-trash-fill"
            fill="currentColor"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"
            />
          </svg>
        </button>
        <div>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Cancel
          </button>
          <button
            type="submit"
            class="btn btn-primary"
            form="editContactNameForm"
          >
            Save changes
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
